<div class="container">
  <h2>All Boards</h2>

  <% @boards.each do |board| %>
    <%= link_to  board_path(board) do %>
      <div class="card">
        <div>
          <p class="card_title"><%= board.name %></p>
          <p><%= board.description %></p>
        </div>
      </div>
    
      <%= link_to new_board_path do %>
        <div class="float_btn">
          <i class="fa fa-plus"></i>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>